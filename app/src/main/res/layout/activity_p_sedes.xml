    <Button
        android:text="ubicación"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/btnSsede3"
        android:background="@color/boton2"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtSsede3"
        android:layout_alignStart="@+id/imgVSsede3" />

    <Button
        android:text="Ubicación"
        android:layout_width="100dp"
        android:id="@+id/btnSsede4"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_height="35dp"
        android:background="@color/boton2"
        android:layout_below="@+id/txtSsede4"
        android:layout_alignStart="@+id/txtSsede4" />
