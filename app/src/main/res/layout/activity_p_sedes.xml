        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textSize="19sp"
        android:layout_below="@+id/imgVSsede1"
        android:layout_alignStart="@+id/imgVSsede1" />

    <Button
        android:text="Ubicación"
        android:layout_width="100dp"
        android:id="@+id/btnSsede1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_height="35dp"
        android:background="@color/boton2"
        android:layout_below="@+id/txtSsede1"
        android:layout_alignStart="@+id/txtSsede1" />

    <ImageView
        app:srcCompat="@drawable/logo"
        android:id="@+id/imgVSsede2"
