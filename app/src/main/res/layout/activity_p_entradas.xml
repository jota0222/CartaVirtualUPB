<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_p_entradas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="upb.cartavirtual.pEntradas"
    android:background="@color/Fondo">

    <ImageView
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:id="@+id/imgVEntrada1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <TextView
        android:text="Información"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEntrada1"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/imgVEntrada1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Información"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEntrada2"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtEntrada1" />

    <ImageView
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:id="@+id/imgVEntrada2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_above="@+id/txtEntrada2"
        android:layout_alignStart="@+id/imgVEntrada1"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
